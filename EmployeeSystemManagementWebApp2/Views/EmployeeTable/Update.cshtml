@model EmployeeViewModel

@{
    ViewData["Title"] = "Employee System Management | Update Employee";
}

<div class="container mt-4">
    <h1 class="display-4 text-center">Update Employee</h1>

    @if (Model.CurrentEmployeeTable != null)
    {
        <div class="card shadow mt-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Employee Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="save" asp-controller="EmployeeTable" method="post">
                    <input type="hidden" name="EmployeeId" value="@Model.CurrentEmployeeTable.EmployeeId" />

                    <div class="form-group mb-3">
                        <label for="FirstName">First Name</label>
                        <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.CurrentEmployeeTable.FirstName" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="LastName">Last Name</label>
                        <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.CurrentEmployeeTable.LastName" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="HireDate">Hire Date</label>
                        <input type="date" class="form-control" id="HireDate" name="HireDate"
                               value="@(Model.CurrentEmployeeTable.HireDate > DateTime.MinValue ? Model.CurrentEmployeeTable.HireDate.ToString("yyyy-MM-dd") : "")"
                               max="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Salary">Salary</label>
                        <input type="text" class="form-control" id="Salary" name="Salary" value="@Model.CurrentEmployeeTable.Salary" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Bonus">Bonus</label>
                        <input type="text" class="form-control" id="Bonus" name="Bonus" value="@Model.CurrentEmployeeTable.Bonus" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Position">Position</label>
                        <input type="text" class="form-control" id="Position" name="Position" value="@Model.CurrentEmployeeTable.Position" required />
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">Save</button>
                        <a href="@Url.Action("Index", "EmployeeTable")" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4">
            <a class="btn btn-outline-info" href="@Url.Action("Index", "Attendance")">View Attendance</a>
        </div>
    }
    else
    {
        <div class="alert alert-danger mt-4">Employee not found.</div>
    }
</div>
